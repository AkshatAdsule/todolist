<%- include("header") %>

<body>
    <div class="box">
        <h1 id="heading"> <%= listTitle %> </h1>
    </div>

    <div class="box">
        <% tasks.forEach(element => { %>
        <div class="item">
            <input type="checkbox">
            <p> <%= element %> </p>
        </div>
        <% }) %>
        <form class="item" action="/" method="post">
            <input type="text" name="task" placeholder="New Task" autocomplete="off">
            <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>
    </div>

</body>
<%- include("footer") %>

</html>